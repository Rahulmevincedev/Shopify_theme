{% for product in section.settings.collections.products limit: section.settings.max_show_collection_products %}
  <div>
    {{ product | image_url: width: '200x' | image_tag }}
    {{ product.title }}
    {{ product.price }}
  </div>
{% endfor %}
{% schema %}
{
  "name": "Show Collection",
  "settings": [
    {
      "type": "collection",
      "id": "collections",
      "label": "Select Collection"
    },
    {
      "type":"range",
      "id":"max_show_collection_products",
      "label":"Set Max Product",
      "default": 4,
      "min": 1,
      "max": 10,
      "step": 1
    }
  ],
  "presets":[
    {
      "name": "Single Collection"
    }
  ]
}
{% endschema %}

