{% comment %} Render blocks {% endcomment %}
<div>{{ section.settings.label }}</div>
{% for block in section.blocks %}
  {% case block.type %}
    {% when 'slide' %}
      {% if block.settings.image != blank %}
        <div class="slide" {{ block.shopify_attributes }}>
          {{ block.settings.image | image_url: width: '200x' | image_tag }}
        </div>
      {% endif %}
  {% endcase %}
{% endfor %}
{% schema %}
{
  "name": "Section Beta",
  "tag": "section",
  "class": "evince_section",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "header",
      "label": "Hello World"
    }
  ],
  "blocks": [
     {
       "name": "Slide",
       "type": "slide",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         }
       ]
     }
   ],
  "presets": [
    {
      "name": "Welcome section Test",
      "category": "ADVANCED LAYOUT"
    }
  ]
}
{% endschema %}
